doctype html
html
  head
    title=title
    link(rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.min.css", type="text/css")
    link(rel="stylesheet" href="/styles/main.css", type="text/css")
  body.container-fluid
    nav.navbar.navbar-default
      div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#site-navbar" aria-expanded="false")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/"): span.glyphicon.glyphicon-list-alt(aria-hidden="true")
      div.collapse.navbar-collapse#site-navbar
        ul.nav.navbar-nav
          li: a(href="/notes") Notes
          li: a(href="/categories") Categories
    block content
    div.footer
      p &copy; Ryan Tanay #{year}
    script(src="/vendor/jquery/dist/jquery.min.js")
    script(src="/vendor/bootstrap/dist/js/bootstrap.min.js")
