extends template
block content
  if note
    h1 Edit Note
  else
    h1 New Note
  - var item = note || {title: '', text: ''}
  - var override = note ? '/' + note._id + '?_method=PUT' : ''
  form(method='POST', action='/notes#{override}')
    .input-group
      label(for='title') Title
      input#title(type='text', name='title', placeholder='Note title', value='#{item.title}')
    .input-group
      label(for='text') Text
      textarea#text(name='text', placeholder='Note text')=item.text
    .input-group
      label(for='cat') Category
      select#cat(name='category')
        for cat in categories
          option(value=cat._id)= cat.name
    .input-group
      input.btn.btn-default(type='submit', value='Save Note')
