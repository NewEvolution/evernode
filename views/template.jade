doctype html
html
  head
    title=title
    link(rel='stylesheet' href='/vendor/bootstrap/dist/css/bootstrap.min.css', type='text/css')
    link(rel='stylesheet' href='/styles/main.css', type='text/css')
  body.container-fluid
    nav.navbar.navbar-default
      div.navbar-header
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#site-navbar' aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/'): span.glyphicon.glyphicon-list-alt(aria-hidden='true')
      div.collapse.navbar-collapse#site-navbar
        ul.nav.navbar-nav
          li: a(href='/notes') Notes
          li: a(href='/categories') Categories
        if user
          ul.nav.navbar-nav.navbar-right
            li: a(href='/login?_method=delete') Logout
    .row
      .col-sm-1.col-md-2.col-lg-3.col-xl-4
      .col-xs-12.col-sm-10.col-md-8.col-lg-6.col-xl-4
        block content
      .col-sm-1.col-md-2.col-lg-3.col-xl-4
    div.footer
      p &copy; Ryan Tanay #{year}
    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
